@model IEnumerable<JobBoard>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Job Board Application</h1>
    <br>
    
    <table class="table">
      <thead>
      <tr>
        <th scope="col">Id</th>
        <th scope="col">Job</th>
        <th scope="col">JobTitle</th>
        <th scope="col">Description</th>
        <th scope="col">Operations</th>
      </tr>
      </thead>
      <tbody>
      @foreach (var item in Model)
      {
        <tr>
          <th scope="row">@item.Id</th>
          <td>@item.Job</td>
          <td>@item.JobTitle</td>
          <td>@item.Description</td>
          <td>
            <a asp-area="" asp-controller="Home" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
            <a asp-area="" asp-controller="Home" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
          </td>
        </tr>
      }
      </tbody>
    </table>
    <br>
    <button>
      <a asp-area="" asp-controller="Home" asp-action="Create">Create</a>
    </button>
</div>
